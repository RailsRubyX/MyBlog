<article class="post">
	<section class="post-head">
			<h2><%= @post.title%></h2>
	<small>
		<time>Submitted <%= time_ago_in_words(@post.created_at) %> Ago
			<% if user_signed_in? %>
				| <%= link_to 'Изменить', edit_post_path(@post) %>
				| <%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm: 'Are you sure?'} %>
			<% end %> 
		</time>
	</small>
	</section>

	<section class="post-body">
		<%= @post.body %>
	</section>
</article>
